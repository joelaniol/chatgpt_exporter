{
  "manifest_version": 3,
  "name": "ChatGPT Thread Exporter",
  "description": "Exports ChatGPT threads as HTML with roles and timestamps.",
  "version": "1.4.1",
  "version_name": "1.4.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "action": {
    "default_title": "ChatGPT Export",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page-bridge.js"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*"
      ]
    }
  ]
}
